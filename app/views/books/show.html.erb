<main>
  <div class='container'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'users/side', user:@book.user %>
        <%= render 'books/side-create', book:@bookc %>
      </div>
      <div class="col-md-8 offser-md-1">
        <h2>Book detail</h2>
        <table class='table'>
          <tbody>
            <tr>
              <td><%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image_id %> 
                <br><%= @book.user.name %>
                <% end %>
              </td>
              </td>
              <td><%= link_to book_path(@book.id) do %>
                <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-success' %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:'btn btn-danger' %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
