<main>
  <div class='container'>
    <div class='row'>
      <div class='rol-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
        <h1>Editing Book</h1>
        <%= form_with :@book local:true do |f| %>
        <label for='book_title'>Title</label>
        <%= f.text_field :title %>
        <label for='book_opinion'>Opinion</label>
        <%= f.text_area :body %>
        <%= f.submit "Update Book" %>
      </div>
      <div>
        <%= link_to 'Show', book_path(@book.id) %>
        |
        <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</main>