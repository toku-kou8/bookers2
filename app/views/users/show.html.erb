<main>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'users/side', user:@user %>
        <%= render 'books/side-create', book:@book %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr><%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag @user, :profile_image_id %>
              <% end %>
            </tr>
            <tr><%= link_to book_path(book.id) %>
              <%= book.title %>
            </tr>
            <tr>
              <%= book.body %>
            </tr>
            <% end %>
            <%= paginate @books %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
