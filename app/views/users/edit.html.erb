<main>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
        <label for="inputImage">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        <label for="inputIntroductin">Introductin</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroductin",placeholder:"introduction" %>
        
        <%= f.submit "Update User" %>
        <% end %>
      </div>
    </div>
  </div>
</main>