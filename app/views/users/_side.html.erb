<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: 'no_image.jpg'  %>
<table class='table'>
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<% if user == current_user %>
<div class='row'>
  <%= link_to 'edit', edit_user_path(user.id), class:'btn btn-edit fas fa-user-cog' %>
</div>
<% else %>
<div class='row'>
  <%= link_to 'edit', user_path(current_user.id), class:'btn btn-edit fas fa-user-cog' %>
</div>
<% end %>
